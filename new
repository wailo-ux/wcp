var token = "8075574862:AAGz41b0GS-mtwXr_O4ENXqS8WLp9TOru34";
var folderId = "ID_FOLDER_DRIVE_ANDA";

function doPost(e) {
  var ss = SpreadsheetApp.getActiveSpreadsheet();
  var sheet = ss.getActiveSheet();
  var data = JSON.parse(e.postData.contents);
  if (!data || !data.message) return;

  var message = data.message;
  var sender = message.from.first_name || message.from.id;
  var text = (message.caption || message.text || "").trim();
  var waktu = new Date();
  var rentangMenit = 60; // Toleransi 1 jam untuk satu sesi laporan

  // 1. Inisialisasi Header jika Sheet kosong
  if (sheet.getLastRow() === 0) {
    sheet.appendRow(["TIME STAMP", "SENDER", "LOKASI", "TSS (NOMINAL)", "TAWAS (KARUNG)", "FOTO TSS 1", "FOTO TSS 2", "FOTO TAWAS 1", "FOTO TAWAS 2"]);
    sheet.getRange("A1:I1").setFontWeight("bold").setBackground("#d9ead3").setHorizontalAlignment("center");
  }

  // 2. Parsing Command & Lokasi
  var parts = text.split(/\s+/); 
  var command = parts[0] ? parts[0].toLowerCase() : "";
  var lokasiInput = parts[1] ? parts[1].toUpperCase().trim() : "";
  var nilaiInput = parts[2] || ""; // Menangkap angka penuh (misal: 500)

  // Logika Album: Izinkan foto tanpa teks masuk agar bisa menempel ke baris sebelumnya
  var isFotoLanjutan = (message.photo && text === "");
  if (!isFotoLanjutan && lokasiInput === "") return;

  // 3. Olah Foto
  var rumusImg = "";
  if (message.photo) {
    var photoId = message.photo[message.photo.length - 1].file_id;
    var fileUrl = getTelegramFileUrl(photoId);
    var blob = UrlFetchApp.fetch(fileUrl).getBlob();
    var file = DriveApp.getFolderById(folderId).createFile(blob);
    file.setSharing(DriveApp.Access.ANYONE_WITH_LINK, DriveApp.Permission.VIEW);
    rumusImg = '=IMAGE("https://drive.google.com/uc?export=view&id=' + file.getId() + '")';
  }

  var lastRow = sheet.getLastRow();
  var rowToUpdate = -1;

  // 4. Logika Pencarian Baris (Berdasarkan Lokasi & Waktu)
  if (lastRow > 1) {
    var rangeData = sheet.getRange(Math.max(2, lastRow - 50), 1, Math.min(lastRow - 1, 50), 3).getValues();
    for (var i = rangeData.length - 1; i >= 0; i--) {
      var rowWaktu = new Date(rangeData[i][0]);
      var rowLokasi = rangeData[i][2].toString().toUpperCase().trim();
      var selisih = (waktu - rowWaktu) / 1000 / 60;

      // Jika Lokasi sama dan masih dalam rentang waktu
      if ((lokasiInput !== "" && rowLokasi === lokasiInput && selisih < rentangMenit) || 
          (isFotoLanjutan && selisih < 5)) {
        rowToUpdate = (Math.max(2, lastRow - 50)) + i;
        break;
      }
    }
  }

  // 5. Eksekusi: Update baris atau Buat baris baru
  if (rowToUpdate !== -1) {
    if (isFotoLanjutan) {
      isiKolomFotoOtomatis(sheet, rowToUpdate, rumusImg);
    } else {
      if (command === "#tss") {
        sheet.getRange(rowToUpdate, 4).setValue(nilaiInput); // Fix nominal 500
        isiFotoEksklusif(sheet, rowToUpdate, 6, 7, rumusImg); // Foto TSS 1 & 2
      } else if (command === "#tawas") {
        sheet.getRange(rowToUpdate, 5).setValue(nilaiInput); // Fix nominal 500
        isiFotoEksklusif(sheet, rowToUpdate, 8, 9, rumusImg); // Foto Tawas 1 & 2
      }
    }
  } else if (!isFotoLanjutan) {
    var nominal = (command === "#tss") ? nilaiInput : "-";
    var karung = (command === "#tawas") ? nilaiInput : "-";
    var fTss = (command === "#tss") ? rumusImg : "";
    var fTawas = (command === "#tawas") ? rumusImg : "";
    
    sheet.appendRow([waktu, sender, lokasiInput, nominal, karung, fTss, "", fTawas, ""]);
    formatBaris(sheet.getLastRow(), sheet);
  }
}

// Fungsi bantu foto spesifik kolom
function isiFotoEksklusif(sheet, row, col1, col2, img) {
  if (!img) return;
  var sel1 = sheet.getRange(row, col1);
  if (sel1.getValue() === "" || sel1.getValue() === "-") {
    sel1.setFormula(img);
  } else {
    sheet.getRange(row, col2).setFormula(img);
  }
}

// Fungsi bantu foto album (tanpa teks)
function isiKolomFotoOtomatis(sheet, row, img) {
  if (!img) return;
  for (var col = 6; col <= 9; col++) {
    if (sheet.getRange(row, col).getValue() === "") {
      sheet.getRange(row, col).setFormula(img);
      break;
    }
  }
}

function formatBaris(row, sheet) {
  sheet.setRowHeight(row, 300);
  sheet.getRange(row, 1, 1, 9).setBorder(true, true, true, true, true, true)
       .setVerticalAlignment("middle").setHorizontalAlignment("center");
  for (var i = 6; i <= 9; i++) { sheet.setColumnWidth(i, 300); }
}

function getTelegramFileUrl(fileId) {
  var res = UrlFetchApp.fetch("https://api.telegram.org/bot" + token + "/getFile?file_id=" + fileId);
  var path = JSON.parse(res.getContentText()).result.file_path;
  return "https://api.telegram.org/file/bot" + token + "/" + path;
}

function setWebhook() {
  var webAppUrl = "URL_WEB_APP_ANDA"; 
  var res = UrlFetchApp.fetch("https://api.telegram.org/bot" + token + "/setWebhook?url=" + webAppUrl);
  Logger.log(res.getContentText());
}
